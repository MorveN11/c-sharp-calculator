{
    "printWidth": 120,
    "singleQuote": true,
    "semi": true,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "none",

    "overrides": [
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2,
                "printWidth": 80,
                "bracketSpacing": true,
                "arrowParens": "avoid",
                "proseWrap": "always"
            }
        }
    ]
}
